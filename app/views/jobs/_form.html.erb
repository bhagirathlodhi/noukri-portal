<div class="p-4">
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-sm-6 col-lg-3 mx-auto">
        <div class="formContainer">
          <h2 class="p-2 text-center mb-4 h4" id="formHeading">New Job</h2>
          <%= form_with model: @job do |form| %>
              <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
            <%= form.label :experience %>
            <%= form.text_area :experience, class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
            <%= form.label :salary %>
            <%= form.text_field :salary, class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
            <%= form.label :location %>
            <%= form.text_field :location, class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
            <%= form.label :skills %>
            <%= form.text_field :skills, class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: "form-control form-control-lg" %>
          </div>

            <div class="form-group">
            <%= form.submit class:"btn btn-success btn-lg w-100 mt-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>