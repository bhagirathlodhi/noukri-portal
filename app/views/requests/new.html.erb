
<div class="p-4">
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-sm-6 col-lg-3 mx-auto">
        <div class="formContainer">
          <h2 class="center"> Apply </h2>
          <%= form_with model: [@job, @request] do |form| %>

            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="field">
            <%= form.label :age %>
            <%= form.date_field :age, class: "form-control" %>
            </div>
            
            <div class="field">
              <%= form.label :address %>
              <%= form.text_field :address, class: "form-control" %>
            </div>

            <div>
              <%= form.label :currentsalary %>
              <%= form.text_field :currentsalary, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label :position %>
              <%= form.text_field :position, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label :yop %>
              <%= form.date_field :yop, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label :contact_number %>
              <%= form.text_field :contact_number, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label :email %>
              <%= form.text_field :email, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.submit class: "btn btn-primary btn-lg w-100 mt-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>  
  </div>
</div>