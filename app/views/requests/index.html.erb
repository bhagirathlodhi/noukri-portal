
<div class="show">
  <h3 class="text center mt-4">All Application</h3>
    <% if @requests.any? %>
      <table class="table table-bordered table-striped mt-4">
        <tr>
          <th>Job</th>
          <th>Applicants Name</th>
          <th>Gender</th>
          <th>Email</th>
          <th>Mobile Number</th>
          <th>Address</th>
          <th>Current salary</th>
          <th>DOB</th>
          <th>Status</th>
          <th>Details</th>
          <% if current_user.try(:admin?) %>
            <th colspan='2'>Admin Action</th>
          <% end %>
        </tr>
        <% @requests.each do |request| %>
          <% if is_job_requests(request) %> 
            <tr>
              <th><h5><%= link_to request.job.title, job_path(request.job_id) %></h5></th>
              <td><%= request.name %></td>
              <td><%= request.gender %></td>
              <td><%= request.email %></td>
              <td><%= request.contact_number %></td>
              <td><%= request.address %></td>
              <td><%= request.currentsalary%></td>
              <td><%= request.date_of_birth %></td>
              <td><%= request.status %></td>
              <% if current_user.try(:admin?) %>
                <td>
                  <a href="<%= job_request_path(request.job_id, request) %>" class="btn btn-info"><i class="bi bi-eye"></i></a>
                </td> 
                <%if request.status != "Rejected" && request.status != "Accept"%>
                  <td>
                    <%= link_to "Accept", job_request_accept_path(request.job_id, request), class: "btn btn-success", data: { confirm: "Are you sure you want to Accept this Application?" } %>
                  </td>
                  <td class="span2">
                    <%= link_to "Reject", job_request_reject_path(request.job_id, request), method: :put, class: "btn btn-warning", data: { turbo_confirm: "Are you sure you want to reject this Application?" } %>
                  </td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
          <tr>
            <% if is_user_request(request) %>
              <% if cannot? :read, @request%>
                <td><h5><%= link_to request.job.title, job_path(request.job_id) %></h5></td>
                <td><%= request.name %></td>
                <td><%= request.gender %></td>
                <td><%= request.email %></td>
                <td><%= request.contact_number %></td>
                <td><%= request.address %></td>
                <td><%= request.currentsalary%></td>
                <td><%= request.date_of_birth %></td>
                <td><%= request.status %></td>
                <td><a href="<%= job_request_path(request.job_id, request) %>" class="btn btn-info"><i class="bi bi-eye"></i></a></td>
              <% end %> 
            <% end %>
          </tr>
        <% end %>
      </table>
      <ul class="pagination justify-content-center mt-3">
        <%= paginate @requests %>
      </ul>
      <div class="d-grid gap-2 col-2 mx-auto mb-4">
        <%=link_to "Back", root_path ,class:"btn btn-primary"%>
      </div>
    <% else %>
      <h3>Application Not found </h3>
    <% end %>     
  </div>
</div>
